---
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import BlogSection from '../components/sections/BlogSection.astro';
import CourseworkSection from '../components/sections/CourseworkSection.astro';
import EducationSection from '../components/sections/EducationSection.astro';
import IndustrySection from '../components/sections/IndustrySection.astro';
import PersonalSection from '../components/sections/PersonalSection.astro';
import ProjectsSection from '../components/sections/ProjectsSection.astro';
import ResearchSection from '../components/sections/ResearchSection.astro';
import TeachingSection from '../components/sections/TeachingSection.astro';
---

<BaseLayout
  title="Hershraj Niranjani"
  description="Hershraj's personal website."
>
  <div class="container">
    <Sidebar />

    <main class="content">
      <nav class="tabs" aria-label="Site sections"></nav>

      <BlogSection />
      <ProjectsSection />
      <EducationSection />
      <ResearchSection />
      <TeachingSection />
      <CourseworkSection />
      <IndustrySection />
      <PersonalSection />
    </main>
  </div>

  <script is:inline src="/scripts/personal-slideshow-registry.js"></script>
  <script is:inline src="/scripts/main.js"></script>
  <script is:inline src="/scripts/blog-search.js"></script>
</BaseLayout>
