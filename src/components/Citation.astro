---
export interface Props {
  href: string;
  tooltip: string;
  ariaLabel?: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
  rel?: string;
}

const {
  href,
  tooltip,
  ariaLabel,
  target = '_blank',
  rel = 'noopener noreferrer',
} = Astro.props;
---

<a
  class="citation"
  href={href}
  target={target}
  rel={rel}
  data-tooltip={tooltip}
  aria-label={ariaLabel ?? tooltip}
>[*]</a>
